{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "plugins": ["react", "import"],
  "rules": {
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "indent": ["error", 2, {
      "SwitchCase": 1
    }],
    "arrow-parens": 0,
    "no-console": 0,
    "no-var": "error",
    "no-constant-condition": "off",
    "no-case-declarations": "off"
  },
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  }
}
